{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "nf-core/differentialabundance - params.tools schema",
    "description": "Schema for the file provided with params.tools",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "analysis_name": {
                "type": "string",
                "meta": ["analysis_name"]
            },
            "diff_method": {
                "type": "string",
                "errorMessage": "choose a proper differential analysis method",
                "meta": ["diff_method"],
                "enum": ["deseq2", "limma"]
            },
            "diff_args": {
                "type": "string",
                "meta": ["diff_args"],
                "default": ""
            },
            "func_method": {
                "type": "string",
                "errorMessage": "choose a proper functional enrichment analysis method",
                "meta": ["func_method"],
                "enum": ["gsea", "gprofiler2"],
                "default": ""
            },
            "func_args": {
                "type": "string",
                "meta": ["func_args"],
                "default": ""
            }
        },
        "required": ["analysis_name", "diff_method"]
    }
}
